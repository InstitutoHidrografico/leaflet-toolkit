{
	"compilerOptions": {
		"target": "ES2015",
		"module": "esnext",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"moduleResolution": "node"
	},
	"include": [
		"src",
		"src/types"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}